<%- include("./partials/header")%>



<nav class="navbar bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><span style="color: black;">To</span><span style="color: rgb(81, 216, 216);">do</span></a>
    </div>
  </nav>
  
<div class="container mt-5">
    <form action="/add/todo"method = 'POST' class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">

        <input type="submit" value="Add Todo" class="btn btn-sm btn-primary mx-2" style="background-color: rgb(81, 214, 214); border: black; color: black;" >
    </form>

    <ul class="list-group mt-5">

      <% todo.forEach(todos =>{  %>
        <li class = "list-group-item"><%= todos.todo %> <a href='/delete/todo/ <%= todos._id %> 'class="btn btn-danger btn-sm">Delete</a></li>
        
               <% }) %>
      </ul>
</div>

